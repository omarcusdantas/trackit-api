        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ]
    },
}